<div class="page-header">
	<h1>{{headline}}</h1>
</div>

<div class="well">
	{{#buttons}}
	<a class="btn {{class}}" href="{{url}}">{{text}}</a>
	{{/buttons}}
</div>


<form action="/shop33/product/create" accept-charset="{{charset}}" method="POST" role="form" id="login" class="form"> 
	{{#values}}
	<div class="row">
		<div class="span4">
			<strong>{{name}}</strong>
				{{#photo}}
				<img src="{{path_fullsize}}" alt="" />
				{{/photo}}
		</div>
		<div class="span4">{{value}}</div>
		
	</div>
	<input type="hidden" name="token" value="{{token}}" />
	<input type="hidden" name="cart_id" value="{{cart_id}}" />
	<input type="hidden" name="attributes" value="a" />
	<input type="hidden" name="product_id" value="{{id}}" />
	<input type="submit" value="{{sendtext}}" /> 
	{{/values}}
	
</form>
